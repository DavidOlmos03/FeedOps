# FeedOps - Configuration Template
# Copy this file to .env and fill in your values

# ====================
# N8N Configuration
# ====================
N8N_HOST=0.0.0.0
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_BASIC_AUTH_ACTIVE=true
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=changeme_n8n_password

# Webhook URL (for production, use your domain)
WEBHOOK_URL=http://localhost:5678

# ====================
# Database Configuration
# ====================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=n8n
POSTGRES_USER=n8n
POSTGRES_PASSWORD=changeme_postgres_password
POSTGRES_NON_ROOT_USER=n8n
POSTGRES_NON_ROOT_PASSWORD=changeme_postgres_password

# ====================
# Redis Configuration (Optional - for caching)
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=changeme_redis_password

# ====================
# GitHub Integration
# ====================
# Create a GitHub webhook at: https://github.com/settings/tokens
GITHUB_WEBHOOK_SECRET=changeme_github_webhook_secret
GITHUB_PERSONAL_ACCESS_TOKEN=ghp_your_token_here

# ====================
# Reddit Integration
# ====================
# Create an app at: https://www.reddit.com/prefs/apps
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USERNAME=your_reddit_username
REDDIT_PASSWORD=your_reddit_password
REDDIT_USER_AGENT=FeedOps/1.0

# ====================
# Telegram Integration
# ====================
# Get your bot token from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_DEFAULT_CHAT_ID=-1001234567890

# ====================
# Application Settings
# ====================
# Timezone for scheduled tasks
TZ=UTC

# Log level: debug, info, warn, error
LOG_LEVEL=info

# Retention period for notifications (days)
NOTIFICATION_RETENTION_DAYS=30

# Maximum retries for failed requests
MAX_RETRIES=3

# Backoff multiplier for retries (seconds)
RETRY_BACKOFF_MULTIPLIER=2

# ====================
# Monitoring & Alerts (Optional)
# ====================
# Telegram channel for system alerts
ALERT_TELEGRAM_CHAT_ID=-1001234567890

# Enable health check endpoint
HEALTH_CHECK_ENABLED=true

# ====================
# Advanced Settings
# ====================
# N8N Encryption key (generate with: openssl rand -hex 32)
N8N_ENCRYPTION_KEY=

# Maximum execution time (seconds)
EXECUTIONS_TIMEOUT=300

# Number of executions to keep in database
EXECUTIONS_DATA_SAVE_ON_SUCCESS=all
EXECUTIONS_DATA_SAVE_ON_ERROR=all
EXECUTIONS_DATA_SAVE_MANUAL_EXECUTIONS=true

# ====================
# Production Settings (Traefik/SSL)
# ====================
# Domain for production deployment
DOMAIN=feedops.example.com

# Email for Let's Encrypt
ACME_EMAIL=admin@example.com

# Enable SSL
SSL_ENABLED=false
